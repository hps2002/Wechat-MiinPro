.comment {
  display: flex;
  margin-left: 15rpx;
  margin-top: 15rpx;
  margin-right: 15rpx;
  border-bottom: inset #f1f1f1;
}

.comment-portrait {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-box {
  flex: 1;
}

.comment-content {
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  margin-left: 15rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.comment-time {
  font-size: 24rpx;
  color: #939393;
}

/* 回复评论 */
.reply-list {
  background-color: #fff;
}

.reply-box {
  margin-left: 64rpx;
  margin-top: 10rpx;
  display: flex;
  background-color: #f1f1f1;
}

.user-name {
  color: aqua;
}

.reply-content{
  padding: 5rpx;
}