.edit-container {
    padding: 15rpx;
}

.content {
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
}

.footer {
    display: flex;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
}

.words-num {
    flex: 1;
}

.publish {
    background-color: #ffd84d;
    font-size: 24rpx;
    margin: 15rpx;
}

/* 图片样式 */
.image-warp{
    height: 170rpx;
    width: 170rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    position: relative;
    overflow: hidden;
    text-align: center;
    align-items: center;
    justify-content: center;
}
.image-list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.select-image {
    display: flex;
    padding: 15rpx;
    height: 170rpx;
    width: 170rpx;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    border: 3rpx dashed #111111;
    border-radius: 15rpx;
}

.icon-jia {
    font-size: 70rpx;
}
.image{
    width: 100%;
    height: 100%;
}

.icon-shanchu{
    position:absolute;
    top: 0;
    right: 0;
    background-color:inherit ;
    color: #808080;
    text-align: center;
    font-size: 22px;
    font-weight: bolder;
}